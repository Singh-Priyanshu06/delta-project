   <% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
         <br /><br />
    <h1>Creating New Listing</h1>
    <form action="/listings" method="post" novalidate  class="needs-validation" enctype="multipart/form-data">
        <div class="md-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
        <div class="invalid-feedback">
      Please provide a valid title.
    </div>
        </div>
        <div class="md-3">
            <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required ></textarea>
        <div class="invalid-feedback">
      Please provide short description.
    </div>
        </div>
        <div class="md-3">
            <label for="image" class="form-label">Upload Image</label>
         <input name="listing[image]" type="file" class="form-control" required >
        </div>
        <div class="row">
        <div class="md-3 col-md-4">
        <label for="price" class="form-label">Price</label>
         <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required>
         <div class="invalid-feedback">
      Please provide a valid price.
    </div>
        </div>
        <div class="md-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
        <div class="invalid-feedback">
      Please provide a valid country.
    </div>
        </div>
        </div>
        <div class="md-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
        <div class="invalid-feedback">
      Please provide a valid location.
    </div>
        </div>
        <button class="btn btn-dark add-btn mt-3 ">Add</button> 
    </form>
</div>
</div>